@page "/products-control"
@using InternalUI.Components.Forms

<div class="product-control-container">
    <!-- Top Panel -->
    <div class="top-panel">
        <div class="search-section">
            <input type="text" class="search-input" placeholder="Search products..." @bind="SearchTerm" />
            <button class="search-button" @onclick="ShowSearchPopup">Search</button>
        </div>
    </div>

    <!-- Main Content Panels -->
    <div class="main-panels">
        <!-- Left Panel -->
        <div class="left-panel">
            <!-- Basic Product Information Section -->
            <div class="basic-info-section">
                <h3>Basic Product Information</h3>
                <div class="basic-info-content">
                    <ProductBasicInfoForm />
                </div>
            </div>

            <!-- Suppliers Section -->
            <div class="suppliers-section">
                <h3>Suppliers</h3>
                <div class="suppliers-content">
                    <SuppliersList />
                </div>
            </div>
        </div>

        <!-- Right Panel -->
        <div class="right-panel">
            <!-- Product Details Section -->
            <div class="details-section">
                <h3>Product Details</h3>
                <div class="details-content">
                    <ProductDetailsForm />
                </div>
            </div>

            <!-- Pricing Section -->
            <div class="pricing-section">
                <h3>Pricing Information</h3>
                <div class="pricing-content">
                    <PricingInfoForm />
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-control-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
    }

    .top-panel {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.25rem;
    }

    .search-section {
        display: flex;
        gap: 0.5rem;
    }

    .search-input {
        flex: 1;
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .search-button {
        padding: 0.5rem 1rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 0.25rem;
        cursor: pointer;
    }

    .search-button:hover {
        background-color: #0069d9;
    }

    .main-panels {
        display: flex;
        gap: 1rem;
        flex: 1;
    }

    .left-panel, .right-panel {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .basic-info-section, .suppliers-section,
    .details-section, .pricing-section {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.25rem;
    }

    .basic-info-section h3,
    .suppliers-section h3,
    .details-section h3,
    .pricing-section h3 {
        margin-bottom: 1rem;
        color: #333;
    }
</style>

@code {
    private string SearchTerm { get; set; } = string.Empty;
    private bool IsSearchPopupVisible { get; set; }

    private void ShowSearchPopup()
    {
        IsSearchPopupVisible = true;
        StateHasChanged();
    }
} 