@page "/users-control"
@using InternalUI.Components.Forms
@using InternalUI.Components.Modals

<div class="user-control-container">
    <!-- Top Panel -->
    <div class="top-panel">
        <div class="search-section">
            <input type="text" class="search-input" placeholder="Search User..." @bind="SearchTerm" />
            <button class="search-button" @onclick="ShowSearchPopup">Search</button>
        </div>
    </div>

    <!-- Main Content Panels -->
    <div class="main-panels">
        <div class="basic-info-section">
            <h3>Basic Information</h3>
            <div class="basic-info-content">
                <UserInfoForm />
            </div>
        </div>
    </div>
</div>

<SearchPopup @bind-Show="IsSearchPopupVisible" InitialSearchTerm="@SearchTerm" />

<style>
    .user-control-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
    }

    .top-panel {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.25rem;
    }

    .search-section {
        display: flex;
        gap: 0.5rem;
    }

    .search-input {
        flex: 1;
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .search-button {
        padding: 0.5rem 1rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 0.25rem;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #0069d9;
        }

    .main-panels {
        display: flex;
        gap: 1rem;
        flex: 1;
    }

    .left-panel, .right-panel {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .basic-info-section, .additional-info-section,
    .address-section, .account-section {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.25rem;
    }

        .search-section h3,
        .basic-info-section h3,
        .additional-info-section h3,
        .address-section h3,
        .account-section h3 {
            margin-bottom: 1rem;
            color: #333;
        }
</style>

@code {
    private string SearchTerm { get; set; } = string.Empty;
    private bool IsSearchPopupVisible { get; set; }

    private void ShowSearchPopup()
    {
        IsSearchPopupVisible = true;
        StateHasChanged();
    }
} 