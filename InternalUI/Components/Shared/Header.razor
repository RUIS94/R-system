@* Header.razor *@
<header>
    <div class="header-content">
        <h1>Internal Management System</h1>
        <div class="current-time">@CurrentTime.ToString("dd/MM/yyyy")</div>
        <button class="login-button" @onclick="ToggleLogin">
            @(IsLoggedIn ? "Logout" : "Login")
        </button>
    </div>
</header>

<style>
    header {
        background-color: #007bff;
        color: white;
        padding: 0.5rem;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    h1 {
        margin: 0;
        font-size: 1.5rem;
    }

    .current-time {
        font-size: 1rem;
        font-weight: 500;
    }

    .login-button {
        background-color: white;
        color: #007bff;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        cursor: pointer;
        font-weight: 500;
    }

    .login-button:hover {
        background-color: #f8f9fa;
    }
</style>

@code {
    private bool IsLoggedIn { get; set; }
    private DateTime CurrentTime { get; set; } = DateTime.Now;

    private void ToggleLogin()
    {
        IsLoggedIn = !IsLoggedIn;
        // TODO: Implement actual login/logout logic
    }
}
