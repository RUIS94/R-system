@using InternalUI.Models

<div class="inventory-info-form">
    <div class="form-group">
        <label>Current Stock</label>
        <input type="number" class="form-control" placeholder="Enter current stock" @bind="CurrentStock" />
    </div>
    <div class="form-group">
        <label>Minimum Stock Level</label>
        <input type="number" class="form-control" placeholder="Enter minimum stock level" @bind="MinimumStockLevel" />
    </div>
    <div class="form-group">
        <label>Reorder Point</label>
        <input type="number" class="form-control" placeholder="Enter reorder point" @bind="ReorderPoint" />
    </div>
    <div class="form-group">
        <label>Location</label>
        <input type="text" class="form-control" placeholder="Enter location" @bind="Location" />
    </div>
</div>

<style>
    .inventory-info-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-group label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .form-control:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }
</style>

@code {
    private int CurrentStock { get; set; }
    private int MinimumStockLevel { get; set; }
    private int ReorderPoint { get; set; }
    private string Location { get; set; } = string.Empty;
} 