@using InternalUI.Models

<div class="product-basic-info-form">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Enter product name" @bind="Name" />
    </div>

    <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" placeholder="Enter product category" @bind="Category" />
    </div>

    <div class="form-group">
        <label>Current Stock</label>
        <input type="number" class="form-control" placeholder="Enter current stock" @bind="CurrentStock" />
    </div>
</div>

<style>
    .product-basic-info-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-group label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .form-control:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }
</style>

@code {
    private string Name { get; set; } = string.Empty;
    private string Category { get; set; } = string.Empty;
    private int CurrentStock { get; set; }
} 