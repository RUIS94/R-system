@using InternalUI.Models

<div class="supplier-contact-form">
    <div class="form-group">
        <label>Contact Name</label>
        <input type="text" class="form-control" placeholder="Enter contact name" @bind="ContactName" />
    </div>

    <div class="form-group">
        <label>Phone</label>
        <input type="tel" class="form-control" placeholder="Enter phone number" @bind="Phone" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Enter email address" @bind="Email" />
    </div>
</div>

<style>
    .supplier-contact-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-group label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .form-control:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }
</style>

@code {
    private string ContactName { get; set; } = string.Empty;
    private string Phone { get; set; } = string.Empty;
    private string Email { get; set; } = string.Empty;
} 