@using InternalUI.Models

<div class="pricing-info-form">
    <div class="form-group">
        <label>Cost Price</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="number" class="form-control" placeholder="Enter cost price" @bind="CostPrice" step="0.01" />
        </div>
    </div>
    <div class="form-group">
        <label>Selling Price</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="number" class="form-control" placeholder="Enter selling price" @bind="SellingPrice" step="0.01" />
        </div>
    </div>
    <div class="form-group">
        <label>Tax Rate (%)</label>
        <input type="number" class="form-control" placeholder="Enter tax rate" @bind="TaxRate" />
    </div>
</div>

<style>
    .pricing-info-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-group label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .form-control:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .input-group {
        display: flex;
        align-items: center;
    }

    .input-group-text {
        padding: 0.5rem;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-right: none;
        border-radius: 0.25rem 0 0 0.25rem;
    }

    .input-group .form-control {
        border-radius: 0 0.25rem 0.25rem 0;
    }
</style>

@code {
    private decimal CostPrice { get; set; }
    private decimal SellingPrice { get; set; }
    private decimal TaxRate { get; set; }
} 