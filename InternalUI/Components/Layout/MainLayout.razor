@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main-content">
        <Header />
        <article class="content">
            @Body
        </article>
        <Footer />
    </div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
<style>
    .page {
        display: flex;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
    }

    .sidebar {
        width: 250px;
        min-width: 250px;
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
        height: 100vh;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .sidebar.collapsed {
        width: 50px;
        min-width: 50px;
    }

    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        height: 100vh;
        overflow: hidden;
        min-width: 0;
    }

    .content {
        flex: 1;
        overflow-y: auto;
        padding: 1rem;
    }
</style>
