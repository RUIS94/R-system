<script>
    function toggleNav() {
        const sidebar = document.querySelector('.sidebar');
        const isCollapsed = sidebar.classList.contains('collapsed');
        
        if (isCollapsed) {
            sidebar.classList.remove('collapsed');
            // 重置所有子菜单的样式
            document.querySelectorAll('.nav-item-submenu').forEach(menu => {
                menu.style.display = 'none';
                menu.style.position = '';
                menu.style.left = '';
                menu.style.top = '';
            });
        } else {
            sidebar.classList.add('collapsed');
            // 隐藏所有子菜单
            document.querySelectorAll('.nav-item-submenu').forEach(menu => {
                menu.style.display = 'none';
            });
        }
    }

    function toggleSubmenu(submenuId) {
        const sidebar = document.querySelector('.sidebar');
        const isCollapsed = sidebar.classList.contains('collapsed');
        
        if (isCollapsed) {
            return; // 在缩小状态下，使用鼠标悬停显示子菜单
        }
        
        const submenu = document.getElementById(submenuId);
        const isVisible = submenu.style.display === 'block';
        
        // 重置子菜单的样式
        submenu.style.position = '';
        submenu.style.left = '';
        submenu.style.top = '';
        
        // 只切换当前子菜单的显示状态
        submenu.style.display = isVisible ? 'none' : 'block';
    }

    function showSubmenuIfCollapsed(submenuId) {
        const sidebar = document.querySelector('.sidebar');
        const isCollapsed = sidebar.classList.contains('collapsed');
        
        if (!isCollapsed) {
            return; // 在展开状态下，使用点击显示子菜单
        }
        
        const submenu = document.getElementById(submenuId);
        const navItem = submenu.closest('.nav-item');
        const rect = navItem.getBoundingClientRect();
        
        submenu.style.display = 'block';
        submenu.style.position = 'fixed';
        submenu.style.left = rect.right + 'px';
        submenu.style.top = rect.top + 'px';
    }

    function hideSubmenuIfCollapsed(submenuId) {
        const sidebar = document.querySelector('.sidebar');
        const isCollapsed = sidebar.classList.contains('collapsed');
        
        if (!isCollapsed) {
            return; // 在展开状态下，使用点击显示子菜单
        }
        
        const submenu = document.getElementById(submenuId);
        submenu.style.display = 'none';
    }

    // 点击页面其他地方时隐藏所有子菜单（仅在展开状态下）
    document.addEventListener('click', function(event) {
        const sidebar = document.querySelector('.sidebar');
        const isCollapsed = sidebar.classList.contains('collapsed');
        
        if (isCollapsed) {
            return; // 在缩小状态下，使用鼠标悬停显示子菜单
        }
        
        if (!event.target.closest('.nav-item')) {
            document.querySelectorAll('.nav-item-submenu').forEach(menu => {
                menu.style.display = 'none';
            });
        }
    });
</script>


